---
pageable: true
per_page: 10
---
<% wrap_layout :layout do %>

<!DOCTYPE html>
<html>
  <head>
    <style>
      .header {
          width: 100%;
          height: 30px;
          position: fixed;
          background-color: #fff6f4;
          display: block;
          overflow: hidden;
          top: 0;
          left: 0;
        }

      .footer {
        width: 100%;
        height: 30px;
        display: block;
        background-color: #fff6f4;
        position: fixed;
        bottom:0;
      }
      .landing_left_side {
         width:30px;
         height: 100%;
         position: fixed;
         background-color: #fff6f4;
         float:left;
         top: 100;
         left: 0;
         display: block;
      }
      .landing_right_side {
         width:30px;
         height: 100%;
         position: fixed;
         background-color: #fff6f4;
         float:right;
         top: 100;
         right: 0;

      }

      .article-container{
         position: absolute;
         top: 50px;
         bottom: 50px;
         right: 100px;
         left: 100px;
         width: 70%;
         height: 100%;
       }

    </style>
  </head>
  <body>
    <div class="header">
      This is the header
    </div>
    <div class="landing_left_side"></div>
    <div class="landing_right_side"></div>
    <div class="article-container">

    <%= yield %>


    </div> <%# article container %>
    <div class="footer">
     The footer
    </div>
  </body>
</html>




<% end %>
